
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, "Song Title" %>
  <%= f.text_field :title %>


  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>


  <%= f.label "Select Genre" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>

  <h2>Notes</h2>

  <%= f.fields_for :notes do |n| %>
    <%= n.label :note %>
    <%= n.text_area :content, rows: 5, cols: 50 %>
  <% end %>


  <%= f.submit %>
<% end %>