<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_id, "Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.label :song_notes_attributes_0_content, "Notes" %>
  <input name="song[notes_content][]" id="song_notes_attributes_0_content">
 
  <%= f.label :song_notes_attributes_1_content, "Notes" %>
  <input name="song[notes_content][]" id="song_notes_attributes_1_content">
  <br />
  <%= f.submit %>
<% end %>


