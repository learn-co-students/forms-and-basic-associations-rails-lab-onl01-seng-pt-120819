<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :song_title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  
  <h2>Notes</h2>


  

    <%= f.label :note %>
    <input name="song[note_content][]"  id= "song_notes_attributes_0_content">
    <input name="song[note_content][]" id= "song_notes_attributes_1_content">
    <br/>


  <br />

  <%= f.submit %>
<% end %>


